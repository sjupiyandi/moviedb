<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.sisco.themoviedb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/moviedb"
        android:label="@string/app_name"
        android:roundIcon="@drawable/moviedb"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".module.profile.ProfileActivity"></activity>
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.register.RegisterActivity" />
        <activity android:name=".module.login.LoginActivity" />
        <activity android:name=".module.detail.DetailActivity" />
        <activity android:name=".module.main.MainActivity"></activity>
    </application>

</manifest>